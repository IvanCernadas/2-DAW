@model CernadasFragueiroIvanTarea4.Models.ListaPokemonViewModel

@{
    ViewData["Title"] = "Lista Pokemons";
}

<h1>Lista</h1>

<form asp-asp-controller="Pokemon" asp-action="Filtrar">
    <div> 
        <label for="altura"></label>
        <select id="altura" name="altura">
            <option value="0">Cualquier altura</option>
            @foreach (var altura in Model.Alturas)
            {
                <option value="@altura">@altura</option>    
            }
        </select>

        <label for="peso"></label>
        <select id="peso" name="peso">
            <option value="0">Cualquier peso</option>
            @foreach (var peso in Model.Pesos)
            {
                <option value="@peso">@peso</option>
            }
        </select>

        <label for="tipo"></label>
        <select id="tipo" name="tipo">
            <option value="0">Cualquier pokemon</option>
            @foreach (var tipo in Model.Tipos)
            {
                <option value="@tipo">@tipo</option>
            }
        </select>

        <input type="hidden" id="AlturaSeleccionada" name="AlturaSeleccionada" />
        <input type="hidden" id="PesoSeleccionado" name="PesoSeleccionado" />
        <input type="hidden" id="TipoSeleccionado" name="TipoSeleccionado" />

        <button type="submit" class="btn btn-primary">Filtrar</button> 
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Número Pokedex
            </th>
            <th>
                Nombre
            </th>
            <th>
                Peso
            </th>
            <th>
                Altura
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Pokemons)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.numero_pokedex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.peso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.altura)
                </td>
                <td>
                    @Html.ActionLink("Agregar Equipo", "AgregarEquipo", new { id = item.numero_pokedex })
                </td>
                <td>
                    @Html.ActionLink("Detalles", "Detalles", new { numero_pokedex = item.numero_pokedex, nombre = item.nombre, 
                    peso = item.peso, altura = item.altura})
                </td>
            </tr>
        }
    </tbody>
</table>
